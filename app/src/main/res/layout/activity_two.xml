<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityTwo">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="База данных"/>

<EditText
    android:id="@+id/nameET"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Введите Имя"
    android:layout_marginTop="5dp"/>


    <EditText
        android:id="@+id/phoneET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите Телефон"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tooltipText="Профессия"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите должность"
            />
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="left"
       android:layout_marginTop="10dp">
    <Button
        android:id="@+id/saveBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить данные"
        android:textSize="12dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/deleteBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить данные"
        android:textSize="12dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/getBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Получить данные"
        android:textSize="12dp"
        android:layout_marginTop="5dp"/>
</LinearLayout>

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя"
        android:textSize="24dp"
        android:layout_marginTop="10dp"/>



    <TextView
        android:id="@+id/phoneTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Телефон"
        android:textSize="24dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/professionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Должность"
        android:textSize="24dp"
        android:layout_marginTop="10dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:text="\n\n"
        android:layout_marginStart="5dp"/>

    <TextView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:text="\n\n"
        android:layout_marginEnd="5dp"/>

    <TextView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:text="\n\n"
        android:layout_marginEnd="5dp"/>


</LinearLayout>
</LinearLayout>